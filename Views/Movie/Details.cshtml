@model Movie
@{
    ViewData["Title"] = Model.Title;
}
<div class="row justify-content-between mt-5">
    <div class="col-md-3">
    <img src="Data:image/*;base64,@(Convert.ToBase64String(Model.Poster))" class="img-thumbnail"/>
    </div>
    <div class="col-md-7">
        <div class="d-flex justify-content-between align-items-center mt-md-max-3">
        <h3>@Model.Title</h3>
        <span class="text-muted"><i class="bi bi-star-fill text-warning"></i> @Model.Rate</span>
        </div>
        <div class="mb-3 ms-1">
            <span class="text-muted me-2"><i class="bi bi-calendar-week"></i> @Model.Year</span>
            <span class="text-muted"><i class="bi bi-film me-1"></i>@Model.Genre.Name</span>
        </div>
        <p class="ms-1">
            @Model.StoryLine
        </p>
    </div>
</div>